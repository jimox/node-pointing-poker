doctype html
html(lang="en")
	head
		title= "Pointing Poker"
		link(rel='stylesheet', href='/css/main.css')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
		script(src='/js/handlebars-v3.0.0.js')
		script(src='/socket.io/socket.io.js')
		script(src='/js/chat.js')
		script.
			var data = { 'teams':!{JSON.stringify(teams)} };
		script(id='title-tpl', type='text/x-handlebars-template')
			div
				|{{team.name}}: {{game.name}}

		script(id='teams-tpl', type='text/x-handlebars-template')
			|{{#each teams}}
			li
				a(href='#', data-team-name='{{name}}')
					|{{name}}
			|{{/each}}
		script(id='games-tpl', type='text/x-handlebars-template')
			|{{#each games}}
			li
				a(href='#', data-game-name='{{name}}')
					|{{name}}
			|{{/each}}

	body
		h2#title.hidden
		#teams-container
			h3
				| Please Select A Team
			ul#teams-list
		#games-container.hidden
			h3
				| Please Select A Game
			ul#games-list
		#sign-in.hidden
			input#user-name.small(type='text')
			input#join-as-player(type='button', value='Join As Player')
			input#join-as-observer(type='button', value='Join As Observer')